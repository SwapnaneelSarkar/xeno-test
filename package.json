{
  "name": "xeno-fde-backend",
  "version": "1.0.0",
  "description": "Backend service for Shopify integration",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "build": "npx prisma generate && echo 'Prisma client generated successfully'",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:setup": "bash scripts/test-setup.sh",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:database": "cross-env NODE_ENV=test jest --testPathPattern=database",
    "test:memory": "cross-env NODE_ENV=test jest --testPathPattern=memory --detectLeaks",
    "lint": "echo 'ESLint not configured'",
    "lint:fix": "echo 'ESLint not configured'",
    "format": "echo 'Prettier not configured'",
    "format:check": "echo 'Prettier not configured'",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t xeno-fde-backend .",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "helm:install": "helm upgrade --install xeno-fde-backend ./helm-chart --create-namespace",
    "helm:uninstall": "helm uninstall xeno-fde-backend",
    "seed": "node prisma/seed.js",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:status": "railway status",
    "health:check": "bash scripts/health-check.sh",
    "start:dev": "npm start & bash scripts/health-check.sh"
  },
  "keywords": [
    "shopify",
    "integration",
    "backend",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@sentry/node": "^10.11.0",
    "axios": "^1.12.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "opossum": "^5.0.1",
    "rate-limit-redis": "^4.2.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
